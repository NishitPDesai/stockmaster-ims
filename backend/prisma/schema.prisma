generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  STAFF
}

enum MoveType {
  RECEIPT
  DELIVERY
  INTERNAL
  ADJUSTMENT
}

enum OperationStatus {
  DRAFT
  WAITING
  READY
  DONE
  CANCELED
}

enum DocumentType {
  RECEIPT
  DELIVERY
  TRANSFER
  ADJUSTMENT
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(STAFF)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  receipts     Receipt[]
  deliveries   DeliveryOrder[]
  transfers    InternalTransfer[]
  adjustments  InventoryAdjustment[]
  otps         OTP[]
}

model Warehouse {
  id        String     @id @default(uuid())
  name      String
  code      String     @unique
  address   String?
  city      String?
  country   String?
  isActive  Boolean    @default(true)
  locations Location[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Location {
  id         String    @id @default(uuid())
  warehouse  Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  warehouseId String
  name       String
  code       String
  description String?
  isActive   Boolean   @default(true)
  stockQuants StockQuant[]
  receiptLines ReceiptLine[]
  deliveryLines DeliveryLine[]
  movesFrom   StockMove[] @relation("fromLocation")
  movesTo     StockMove[] @relation("toLocation")
  transferSourceLines InternalTransferLine[] @relation("transferSource")
  transferDestLines   InternalTransferLine[] @relation("transferDest")
  adjustments InventoryAdjustment[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  @@index([warehouseId])
}

model Product {
  id           String     @id @default(uuid())
  name         String
  sku          String     @unique
  category     String?
  uom          String?
  isActive     Boolean    @default(true)
  initialStock Int        @default(0)
  stockQuants  StockQuant[]
  receiptLines ReceiptLine[]
  deliveryLines DeliveryLine[]
  internalTransferLines InternalTransferLine[]
  adjustmentLines InventoryAdjustmentLine[]
  stockMoves   StockMove[]
  reorderRules ReorderRule[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  @@index([category])
}

model ReorderRule {
  id          String   @id @default(uuid())
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId   String
  warehouseId String?
  locationId  String?
  minQty      Int
  maxQty      Int
  createdAt   DateTime @default(now())
  @@index([productId])
}

model StockQuant {
  id         String   @id @default(uuid())
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId  String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId String
  quantity   Int      @default(0)
  @@unique([productId, locationId])
  @@index([locationId])
  @@index([productId])
}

model StockMove {
  id           String     @id @default(uuid())
  moveType     MoveType
  reference    String?
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    String
  fromLocation Location?  @relation("fromLocation", fields: [fromLocationId], references: [id])
  fromLocationId String?
  toLocation   Location?  @relation("toLocation", fields: [toLocationId], references: [id])
  toLocationId String?
  quantity     Int
  createdAt    DateTime   @default(now())
  status       OperationStatus @default(DONE)
  @@index([productId])
  @@index([fromLocationId])
  @@index([toLocationId])
}

model Receipt {
  id           String    @id @default(uuid())
  code         String    @unique
  supplierName String?
  status       OperationStatus @default(DRAFT)
  scheduledDate DateTime?
  createdBy    User?     @relation(fields: [createdById], references: [id])
  createdById  String?
  lines        ReceiptLine[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  @@index([status])
}

model ReceiptLine {
  id         String   @id @default(uuid())
  receipt    Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  receiptId  String
  product    Product  @relation(fields: [productId], references: [id])
  productId  String
  location   Location @relation(fields: [locationId], references: [id])
  locationId String
  orderedQty Int?
  receivedQty Int?
}

model DeliveryOrder {
  id           String    @id @default(uuid())
  code         String    @unique
  customerName String?
  status       OperationStatus @default(DRAFT)
  scheduledDate DateTime?
  createdBy    User?     @relation(fields: [createdById], references: [id])
  createdById  String?
  lines        DeliveryLine[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  @@index([status])
}

model DeliveryLine {
  id             String        @id @default(uuid())
  deliveryOrder  DeliveryOrder @relation(fields: [deliveryOrderId], references: [id], onDelete: Cascade)
  deliveryOrderId String
  product        Product       @relation(fields: [productId], references: [id])
  productId      String
  sourceLocation Location      @relation(fields: [sourceLocationId], references: [id])
  sourceLocationId String
  quantity       Int
}

model InternalTransfer {
  id           String    @id @default(uuid())
  code         String    @unique
  status       OperationStatus @default(DRAFT)
  scheduledDate DateTime?
  createdBy    User?     @relation(fields: [createdById], references: [id])
  createdById  String?
  lines        InternalTransferLine[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model InternalTransferLine {
  id                 String           @id @default(uuid())
  internalTransfer   InternalTransfer @relation(fields: [internalTransferId], references: [id], onDelete: Cascade)
  internalTransferId String
  product            Product          @relation(fields: [productId], references: [id])
  productId          String
  sourceLocation     Location         @relation("transferSource", fields: [sourceLocationId], references: [id])
  sourceLocationId   String
  destinationLocation Location        @relation("transferDest", fields: [destinationLocationId], references: [id])
  destinationLocationId String
  quantity           Int
}

model InventoryAdjustment {
  id          String   @id @default(uuid())
  code        String   @unique
  status      OperationStatus @default(DRAFT)
  reason      String?
  location    Location @relation(fields: [locationId], references: [id])
  locationId  String
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdById String?
  lines       InventoryAdjustmentLine[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InventoryAdjustmentLine {
  id                     String               @id @default(uuid())
  inventoryAdjustment    InventoryAdjustment  @relation(fields: [inventoryAdjustmentId], references: [id], onDelete: Cascade)
  inventoryAdjustmentId  String
  product                Product              @relation(fields: [productId], references: [id])
  productId              String
  countedQty             Int
  previousQty            Int
}

model OTP {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  code      String
  expiresAt DateTime
  consumed  Boolean  @default(false)
}
